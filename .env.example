# ====================================
# Application
# ====================================
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
WORKERS=4
LOG_LEVEL=info
PROJECT_NAME=NoteFusion AI
API_V1_STR=/api/v1

# ====================================
# Database
# ====================================
# PostgreSQL
POSTGRES_USER=notefusion
POSTGRES_PASSWORD=notefusion123
POSTGRES_DB=notefusion
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# ====================================
# Security
# ====================================
# Generate secure keys with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
SECURITY_PASSWORD_SALT=your-password-salt-here

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
JWT_VERIFY_TOKEN_EXPIRE_HOURS=24
JWT_PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=60

# Rate Limiting
RATE_LIMIT=100/minute
RATE_LIMIT_AUTH=10/minute
RATE_LIMIT_PUBLIC=30/minute

# ====================================
# Security Headers
# ====================================
# Content Security Policy (CSP)
CSP_REPORT_URI=/api/security/csp-report
CSP_REPORT_ONLY=False

# Security Headers
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1; mode=block
REFERRER_POLICY=strict-origin-when-cross-origin
PERMISSIONS_POLICY=geolocation=(), microphone=(), camera=()

# HSTS (HTTP Strict Transport Security)
HSTS_ENABLED=True
HSTS_MAX_AGE=31536000  # 1 year
HSTS_INCLUDE_SUBDOMAINS=True
HSTS_PRELOAD=True

# ====================================
# Session & Cookies
# ====================================
SESSION_SECRET_KEY=your-session-secret-key-here
SESSION_COOKIE_NAME=session_id
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=lax
SESSION_LIFETIME=86400  # 24 hours in seconds

# CSRF Protection
CSRF_SECRET_KEY=your-csrf-secret-key-here
CSRF_HEADER_NAME=X-CSRF-Token
CSRF_COOKIE_NAME=csrftoken
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=False  # JavaScript needs to read this
CSRF_COOKIE_SAMESITE=strict

# Password Hashing
PASSWORD_HASH_ALGORITHM=bcrypt
PASSWORD_HASH_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_NUMBER=True
PASSWORD_REQUIRE_SPECIAL_CHAR=True

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_MAX_AGE=600  # 10 minutes

# ====================================
# Redis (Caching & Task Queue)
# ====================================
# Local Redis
REDIS_URL=redis://localhost:6379/0

# Redis Cloud/Upstash (Production)
# REDIS_URL=rediss://:password@hostname:port

# Cache settings
REDIS_CACHE_TTL=3600  # 1 hour
REDIS_TASK_TTL=86400  # 24 hours

# ====================================
# File Storage
# ====================================
# Local storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=52428800  # 50MB

# AWS S3 (Production)
# STORAGE_PROVIDER=s3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=notefusion-ai
# S3_USE_SSL=true

# ====================================
# AI Services
# ====================================
# OpenAI
OPENAI_API_KEY=your-openai-api-key
DEFAULT_AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# ====================================
# Email (Optional)
# ====================================
# SMTP_SERVER=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# EMAIL_FROM=noreply@yourdomain.com

# ====================================
# Admin User (initial setup)
# ====================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeThisPassword123!  # Change on first login

# ====================================
# Monitoring & Analytics
# ====================================
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=your-ga-id

# ====================================
# Rate Limiting
# ====================================
RATE_LIMIT=100/minute
RATE_LIMIT_BY_IP=true

# ====================================
# Development/Testing
# ====================================
# TEST_DATABASE_URL=sqlite+aiosqlite:///./test_notefusion.db
