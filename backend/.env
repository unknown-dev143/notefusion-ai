# Application settings
ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# API settings
API_V1_STR=/api/v1
PROJECT_NAME=NoteFusion AI

# Database settings
DATABASE_URL=sqlite+aiosqlite:///./notefusion.db
TEST_DATABASE_URL=sqlite+aiosqlite:///./test_notefusion.db

# Authentication settings
JWT_SECRET_KEY=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30  # 30 days
JWT_VERIFICATION_TOKEN_EXPIRE_HOURS=24  # 24 hours
JWT_PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=60  # 1 hour

# Email settings (configure if using email features)
EMAILS_ENABLED=False
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.example.com
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
CONTACT_EMAIL=contact@example.com
EMAILS_FROM_EMAIL=noreply@example.com
EMAILS_FROM_NAME="NoteFusion AI"

# OpenAI settings (required for AI features)
OPENAI_API_KEY=your-openai-api-key

# Redis settings (required for Celery background tasks)
REDIS_URL=redis://localhost:6379/0

# File upload settings (adjust as needed)
UPLOAD_FOLDER=./app/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Video generation settings
VIDEO_OUTPUT_DIR=./app/videos
MAX_VIDEO_DURATION=600  # 10 minutes in seconds
DEFAULT_VIDEO_WIDTH=1280
DEFAULT_VIDEO_HEIGHT=720
DEFAULT_FPS=30
TEMP_DIR=./app/temp

# Stripe settings (required for payment processing)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Cloud Storage Settings (AWS S3) - configure if using S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name
S3_USE_SSL=True
S3_SIGNATURE_VERSION=s3v4

# Frontend URLs
FRONTEND_URL=http://localhost:3000
SUCCESS_URL={FRONTEND_URL}/billing/success
CANCEL_URL={FRONTEND_URL}/billing/cancel
