{
  "short_name": "NoteFusion AI",
  "name": "NoteFusion AI - Intelligent Note Taking",
  "description": "Transform your notes into knowledge with AI-powered organization and search",
  "start_url": "/?source=pwa",
  "display": "standalone",
  "theme_color": "#1976d2",
  "background_color": "#ffffff",
  "orientation": "portrait",
  "scope": "/",
  "id": "/",
  "prefer_related_applications": false,
  "categories": ["productivity", "education", "utilities"],
  "shortcuts": [
    {
      "name": "New Note",
      "short_name": "New Note",
      "description": "Create a new note",
      "url": "/new-note?source=pwa",
      "icons": [{ "src": "/logo192.png", "sizes": "192x192" }]
    },
    {
      "name": "My Notes",
      "short_name": "My Notes",
      "description": "View all notes",
      "url": "/notes?source=pwa",
      "icons": [{ "src": "/logo192.png", "sizes": "192x192" }]
    }
  ],
  "icons": [
    {
      "src": "favicon.ico",
      "sizes": "64x64 32x32 24x24 16x16",
      "type": "image/x-icon"
    },
    {
      "src": "logo192.png",
      "type": "image/png",
      "sizes": "192x192",
      "purpose": "any maskable"
    },
    {
      "src": "logo512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "any maskable"
    },
    {
      "src": "logo512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "splash-screen"
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/dark-mode.png",
      "type": "image/png",
      "sizes": "1280x800",
      "form_factor": "wide",
      "label": "Dark Mode Interface"
    },
    {
      "src": "screenshots/mobile-view.png",
      "type": "image/png",
      "sizes": "414x896",
      "form_factor": "narrow",
      "label": "Mobile View"
    }
  ],
  "start_url": "/?source=pwa",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "browser"],
  "orientation": "any",
  "theme_color": "#1a1a1a",
  "background_color": "#ffffff",
  "id": "/?source=pwa",
  "shortcuts": [
    {
      "name": "New Note with AI",
      "short_name": "New AI Note",
      "description": "Create a new note with AI assistance",
      "url": "/new?ai=true",
      "icons": [{ "src": "icons/new-note-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Search Notes",
      "short_name": "Search",
      "description": "Search through your notes",
      "url": "/search"
    },
    {
      "name": "Recent Notes",
      "short_name": "Recent",
      "description": "View recently edited notes",
      "url": "/recent"
    }
  ],
  "categories": ["productivity", "utilities", "education", "lifestyle"],
  "splash_pages": null,
  "prefer_related_applications": false,
  "related_applications": [],
  "protocol_handlers": [
    {
      "protocol": "web+notefusion",
      "url": "/open?url=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/*", ".pdf"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/markdown": [".md", ".markdown"],
        "text/plain": [".txt"],
        "application/json": [".json", ".notefusion"],
        "application/pdf": [".pdf"]
      },
      "icons": [
        {
          "src": "/icons/import-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing, auto"
  },
  "handle_links": "preferred",
  "edge_side_panel": {
    "preferred_width": 480
  },
  "permissions": [
    "clipboard-write",
    "clipboard-read",
    "fileSystem",
    "fileSystem.write",
    "fileSystem.directory"
  ]
}
